{
  "expo": {
    "name": "Aagam Holidays",
    "slug": "aagam-holidays",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "scheme": "aagamholidays",
    "userInterfaceStyle": "light",
    "splash": {
      "image": "./assets/splash.png",
      "resizeMode": "contain",
      "backgroundColor": "#059669"
    },
    "assetBundlePatterns": ["**/*"],
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.aagamholidays.app",
      "infoPlist": {
        "NSLocationWhenInUseUsageDescription": "We need your location to share it in trip chat.",
        "NSCameraUsageDescription": "We need camera access to share photos in trip chat.",
        "NSPhotoLibraryUsageDescription": "We need photo library access to share photos in trip chat."
      }
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#059669"
      },
      "package": "com.aagamholidays.app",
      "permissions": [
        "ACCESS_FINE_LOCATION",
        "ACCESS_COARSE_LOCATION",
        "CAMERA",
        "READ_EXTERNAL_STORAGE"
      ],
      "googleServicesFile": "./google-services.json"
    },
    "web": {
      "bundler": "metro",
      "output": "single",
      "favicon": "./assets/favicon.png"
    },
    "plugins": [
      "expo-router",
      "expo-font",
      "expo-secure-store",
      [
        "expo-notifications",
        {
          "icon": "./assets/notification-icon.png",
          "color": "#059669"
        }
      ],
      [
        "expo-location",
        {
          "locationWhenInUsePermission": "Allow Aagam Holidays to access your location to share in trip chat."
        }
      ],
      [
        "expo-image-picker",
        {
          "photosPermission": "Allow Aagam Holidays to access your photos to share in trip chat.",
          "cameraPermission": "Allow Aagam Holidays to access your camera to take photos for trip chat."
        }
      ]
    ],
    "experiments": {
      "typedRoutes": true
    },
    "extra": {
      "router": {
        "origin": false
      },
      "eas": {
        "projectId": "your-project-id-here"
      }
    }
  }
}

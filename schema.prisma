  sortOrder            Int                   @default(0)
  priceModifier        Float?
  createdAt            DateTime              @default(now())
  updatedAt            DateTime              @updatedAt
  tourPackage          TourPackage?          @relation(fields: [tourPackageId], references: [id], onDelete: Cascade)

{
    "version": "7.2",
    "data_api_version": "3.0",
    "routing_model": {
        "DESTINATION_SELECTION": [
            "TRAVEL_DATES"
        ],
        "TRAVEL_DATES": [
            "TRAVELERS"
        ],
        "TRAVELERS": [
            "PACKAGE_TYPE"
        ],
        "PACKAGE_TYPE": [
            "ACCOMMODATION"
        ],
        "ACCOMMODATION": [
            "ACTIVITIES"
        ],
        "ACTIVITIES": [
            "PACKAGE_SUMMARY"
        ],
        "PACKAGE_SUMMARY": [
            "BOOKING_CONFIRMATION"
        ],
        "BOOKING_CONFIRMATION": []
    },
    "screens": [
        {
            "id": "DESTINATION_SELECTION",
            "title": "Choose Your Destination",
            "data": {
                "destinations": {
                    "type": "array",
                    "items": {
                        "type": "object",
                        "properties": {
                            "id": {
                                "type": "string"
                            },
                            "title": {
                                "type": "string"
                            },
                            "description": {
                                "type": "string"
                            }
                        }
                    },
                    "__example__": [
                        {
                            "id": "bali",
                            "title": "Bali, Indonesia",
                            "description": "paradise with beaches and culture"
                        },
                        {
                            "id": "paris",
                            "title": "Paris, France",
                            "description": "City of lights and romance"
                        },
                        {
                            "id": "tokyo",
                            "title": "Tokyo, Japan",
                            "description": "Modern metropolis with ancient traditions"
                        },
                        {
                            "id": "dubai",
                            "title": "Dubai, UAE",
                            "description": "Luxury and adventure in the desert"
                        }
                    ]
                }
            },
            "layout": {
                "type": "SingleColumnLayout",
                "children": [
                    {
                        "type": "Form",
                        "name": "destination_form",
                        "children": [
                            {
                                "type": "TextHeading",
                                "text": "Where would you like to go?"
                            },
                            {
                                "type": "RadioButtonsGroup",
                                "name": "selected_destination",
                                "label": "Select Destination",
                                "data-source": [
                                    {
                                        "id": "bali",
                                        "title": "Bali, Indonesia",
                                        "description": "Tropical paradise with beaches and culture"
                                    },
                                    {
                                        "id": "paris",
                                        "title": "Paris, France",
                                        "description": "City of lights and romance"
                                    },
                                    {
                                        "id": "tokyo",
                                        "title": "Tokyo, Japan",
                                        "description": "Modern metropolis with ancient traditions"
                                    },
                                    {
                                        "id": "dubai",
                                        "title": "Dubai, UAE",
                                        "description": "Luxury and adventure in the desert"
                                    }
                                ],
                                "required": true
                            }
                        ]
                    }
                ]
            }
        },
        {
            "id": "TRAVEL_DATES",
            "title": "Select Travel Dates",
            "data": {
                "departure_date": {
                    "type": "string",
                    "__example__": "2024-12-01"
                },
                "return_date": {
                    "type": "string",
                    "__example__": "2024-12-08"
                }
            },
            "layout": {
                "type": "SingleColumnLayout",
                "children": [
                    {
                        "type": "Form",
                        "name": "dates_form",
                        "children": [
                            {
                                "type": "TextHeading",
                                "text": "When do you want to travel?"
                            },
                            {
                                "type": "TextInput",
                                "name": "departure_date",
                                "label": "Departure Date (YYYY-MM-DD)",
                                "input-type": "text",
                                "required": true
                            },
                            {
                                "type": "TextInput",
                                "name": "return_date",
                                "label": "Return Date (YYYY-MM-DD)",
                                "input-type": "text",
                                "required": true
                            }
                        ]
                    }
                ]
            }
        },
        {
            "id": "TRAVELERS",
            "title": "Number of Travelers",
            "data": {
                "adult_count": {
                    "type": "string",
                    "__example__": "2"
                },
                "child_count": {
                    "type": "string",
                    "__example__": "0"
                }
            },
            "layout": {
                "type": "SingleColumnLayout",
                "children": [
                    {
                        "type": "Form",
                        "name": "travelers_form",
                        "children": [
                            {
                                "type": "TextHeading",
                                "text": "How many people are traveling?"
                            },
                            {
                                "type": "TextInput",
                                "name": "adult_count",
                                "label": "Number of Adults",
                                "input-type": "text",
                                "required": true
                            },
                            {
                                "type": "TextInput",
                                "name": "child_count",
                                "label": "Number of Children (under 12)",
                                "input-type": "text",
                                "required": true
                            }
                        ]
                    }
                ]
            }
        },
        {
            "id": "PACKAGE_TYPE",
            "title": "Choose Package Type",
            "data": {
                "package_types": {
                    "type": "array",
                    "items": {
                        "type": "object",
                        "properties": {
                            "id": {
                                "type": "string"
                            },
                            "title": {
                                "type": "string"
                            },
                            "description": {
                                "type": "string"
                            }
                        }
                    },
                    "__example__": [
                        {
                            "id": "luxury",
                            "title": "Luxury Package",
                            "description": "5-star hotels, private tours, premium experiences"
                        },
                        {
                            "id": "standard",
                            "title": "Standard Package",
                            "description": "4-star hotels, guided tours, comfortable travel"
                        },
                        {
                            "id": "budget",
                            "title": "Budget Package",
                            "description": "3-star hotels, basic tours, economical options"
                        }
                    ]
                }
            },
            "layout": {
                "type": "SingleColumnLayout",
                "children": [
                    {
                        "type": "Form",
                        "name": "package_form",
                        "children": [
                            {
                                "type": "TextHeading",
                                "text": "What type of package suits you?"
                            },
                            {
                                "type": "RadioButtonsGroup",
                                "name": "selected_package",
                                "label": "Package Type",
                                "data-source": [
                                    {
                                        "id": "luxury",
                                        "title": "Luxury Package",
                                        "description": "5-star hotels, private tours, premium experiences"
                                    },
                                    {
                                        "id": "standard",
                                        "title": "Standard Package",
                                        "description": "4-star hotels, guided tours, comfortable travel"
                                    },
                                    {
                                        "id": "budget",
                                        "title": "Budget Package",
                                        "description": "3-star hotels, basic tours, economical options"
                                    }
                                ],
                                "required": true
                            }
                        ]
                    }
                ]
            }
        },
        {
            "id": "ACCOMMODATION",
            "title": "Accommodation Preferences",
            "data": {
                "accommodation_options": {
                    "type": "array",
                    "items": {
                        "type": "object",
                        "properties": {
                            "id": {
                                "type": "string"
                            },
                            "title": {
                                "type": "string"
                            }
                        }
                    },
                    "__example__": [
                        {
                            "id": "city_center",
                            "title": "City Center Hotel"
                        },
                        {
                            "id": "beachfront",
                            "title": "Beachfront Resort"
                        },
                        {
                            "id": "mountain_view",
                            "title": "Mountain View Lodge"
                        }
                    ]
                }
            },
            "layout": {
                "type": "SingleColumnLayout",
                "children": [
                    {
                        "type": "Form",
                        "name": "accommodation_form",
                        "children": [
                            {
                                "type": "TextHeading",
                                "text": "Where would you like to stay?"
                            },
                            {
                                "type": "RadioButtonsGroup",
                                "name": "selected_accommodation",
                                "label": "Accommodation Type",
                                "data-source": [
                                    {
                                        "id": "city_center",
                                        "title": "City Center Hotel"
                                    },
                                    {
                                        "id": "beachfront",
                                        "title": "Beachfront Resort"
                                    },
                                    {
                                        "id": "mountain_view",
                                        "title": "Mountain View Lodge"
                                    }
                                ],
                                "required": true
                            }
                        ]
                    }
                ]
            }
        },
        {
            "id": "ACTIVITIES",
            "title": "Optional Activities",
            "data": {
                "activities": {
                    "type": "array",
                    "items": {
                        "type": "object",
                        "properties": {
                            "id": {
                                "type": "string"
                            },
                            "title": {
                                "type": "string"
                            },
                            "description": {
                                "type": "string"
                            },
                            "price": {
                                "type": "string"
                            }
                        }
                    },
                    "__example__": [
                        {
                            "id": "scuba_diving",
                            "title": "Scuba Diving Course",
                            "description": "$150",
                            "price": "$150"
                        },
                        {
                            "id": "cooking_class",
                            "title": "Local Cooking Class",
                            "description": "$75",
                            "price": "$75"
                        },
                        {
                            "id": "safari",
                            "title": "Safari Adventure",
                            "description": "$200",
                            "price": "$200"
                        }
                    ]
                }
            },
            "layout": {
                "type": "SingleColumnLayout",
                "children": [
                    {
                        "type": "Form",
                        "name": "activities_form",
                        "children": [
                            {
                                "type": "TextHeading",
                                "text": "Add optional activities to your trip"
                            },
                            {
                                "type": "CheckboxGroup",
                                "name": "selected_activities",
                                "label": "Choose Activities",
                                "data-source": [
                                    {
                                        "id": "scuba_diving",
                                        "title": "Scuba Diving Course",
                                        "description": "$150"
                                    },
                                    {
                                        "id": "cooking_class",
                                        "title": "Local Cooking Class",
                                        "description": "$75"
                                    },
                                    {
                                        "id": "safari",
                                        "title": "Safari Adventure",
                                        "description": "$200"
                                    }
                                ]
                            }
                        ]
                    }
                ]
            }
        },
        {
            "id": "PACKAGE_SUMMARY",
            "title": "Package Summary",
            "data": {
                "summary": {
                    "type": "object",
                    "properties": {
                        "destination": {
                            "type": "string"
                        },
                        "dates": {
                            "type": "string"
                        },
                        "travelers": {
                            "type": "string"
                        },
                        "package_type": {
                            "type": "string"
                        },
                        "accommodation": {
                            "type": "string"
                        },
                        "activities": {
                            "type": "string"
                        },
                        "total_price": {
                            "type": "string"
                        }
                    },
                    "__example__": {
                        "destination": "Bali, Indonesia",
                        "dates": "Dec 1-8, 2024",
                        "travelers": "2 Adults",
                        "package_type": "Luxury Package",
                        "accommodation": "Beachfront Resort",
                        "activities": "Scuba Diving Course",
                        "total_price": "$2,850"
                    }
                }
            },
            "layout": {
                "type": "SingleColumnLayout",
                "children": [
                    {
                        "type": "TextHeading",
                        "text": "Review Your Package"
                    },
                    {
                        "type": "TextBody",
                        "text": "Destination: {{data.summary.destination}}"
                    },
                    {
                        "type": "TextBody",
                        "text": "Travel Dates: {{data.summary.dates}}"
                    },
                    {
                        "type": "TextBody",
                        "text": "Travelers: {{data.summary.travelers}}"
                    },
                    {
                        "type": "TextBody",
                        "text": "Package Type: {{data.summary.package_type}}"
                    },
                    {
                        "type": "TextBody",
                        "text": "Accommodation: {{data.summary.accommodation}}"
                    },
                    {
                        "type": "TextBody",
                        "text": "Activities: {{data.summary.activities}}"
                    },
                    {
                        "type": "TextBody",
                        "text": "Total Price: {{data.summary.total_price}}"
                    }
                ]
            }
        },
        {
            "id": "BOOKING_CONFIRMATION",
            "title": "Booking Confirmation",
            "terminal": true,
            "data": {
                "confirmation": {
                    "type": "object",
                    "properties": {
                        "booking_id": {
                            "type": "string"
                        },
                        "status": {
                            "type": "string"
                        }
                    },
                    "__example__": {
                        "booking_id": "TP2024001",
                        "status": "confirmed"
                    }
                }
            },
            "layout": {
                "type": "SingleColumnLayout",
                "children": [
                    {
                        "type": "TextHeading",
                        "text": "Booking Confirmed!"
                    },
                    {
                        "type": "TextBody",
                        "text": "Thank you for choosing our tour package. Your booking ID is {{data.confirmation.booking_id}}."
                    },
                    {
                        "type": "TextBody",
                        "text": "You will receive a confirmation email shortly with all the details."
                    }
                ]
            }
        }
    ]
}
